<launch>
    <arg name="headless" default="false"/>
    <arg name="gui" default="true"/> 
    <arg name="ns" default="/"/>
    <!-- <arg name="world_path" default="$(find mavros)/../sim/worlds/AIM_2020.world" /> -->
    <arg name="world_path" default="$(find mavros)/../sim/worlds/hector_borealis.world" />
    <arg name="build" default="px4_sitl_default"/>
    <!--arg name="fcu_url" default="udp://:14540@localhost:14557"/--> 
    <arg name="fcu_url" default="udp://:14540@192.168.1.36:14557"/>
    <arg name="gcs_url" default="" />   <!-- GCS link is provided by SITL -->
    <arg name="fcu_protocol" default="v2.0" />
    <arg name="tgt_system" default="1" />
    <arg name="tgt_component" default="1" />
    <arg name="mavros_transformation" default="-1.57" />
    <arg name="model" default="iris_depth_camera"/> <!--potentially there might be conflict if model was transferred to mavros, therefore, root folder remains in avoidance --> 
    <arg name="event_mode" default="timer" /> <!--added event for domain rand-->
    <arg name="file_waypoints" value="$(find controllers)/policy/waypoints.txt"/>
    <arg name="file_waypoints_stamped" value="$(find controllers)/policy/waypoints_stamped.txt"/>
    <arg name="mav_name" default="iris"/>
    <arg name="command_input" default="2" />
    <arg name="gazebo_simulation" default="true" />
	
    <param name="use_sim_time" value="true" />

    <node pkg="geometric_controller" type="geometric_controller_node" name="geometric_controller" output="screen">
  		<param name="mav_name" type="string" value="$(arg mav_name)" />
          <remap from="command/bodyrate_command" to="/mavros/setpoint_raw/attitude"/>
          <param name="ctrl_mode" value="$(arg command_input)" />
          <param name="enable_sim" value="$(arg gazebo_simulation)" />
          <param name="enable_gazebo_state" value="true"/>
          <param name="max_acc" value="10.0" />
          <param name="Kp_x" value="8.0" />
          <param name="Kp_y" value="8.0" />
          <param name="Kp_z" value="10.0" />
	  <param name="Kv_x" value="1.5" />
          <param name="Kv_y" value="1.5" />
          <param name="Kv_z" value="3.3" />
	  <param name="yaw_heading" value="0.0" />	
    </node>

    <node pkg="trajectory_publisher" type="trajectory_publisher" name="trajectory_publisher" output="screen">
	  <param name="trajectory_type" value="1" /> <!-- linear graph is 0, circle is 1 -->
	  <param name="shape_omega" value="1.2" />
	  <param name="initpos_z" value="2.0" />
	  <param name="reference_type" value="2" />
    </node>

    <node name="trajectory" pkg="controllers" type="trajectory" output="screen" args=""> <!-- newly added from andriy's publisher -->
	  <param name="file_waypoints" value="$(arg file_waypoints)" />
	  <param name="file_waypoints_stamped" value="$(arg file_waypoints_stamped)" />
    </node>  


    <node pkg="rqt_reconfigure" type="rqt_reconfigure" output="screen" name="rqt_reconfigure" />
    <node pkg="rqt_multiplot" type="rqt_multiplot" output="screen" name="rqt_multiplot" />	

    <!-- Launch PX4 SITL -->
    <include file="$(find px4)/launch/px4.launch">
    </include> 
 	
    <!-- Launch MavROS -->
    <group ns="$(arg ns)">
        <include file="$(find mavros)/launch/node.launch">
            <arg name="pluginlists_yaml" value="$(find mavros)/launch/px4_pluginlists.yaml" />
            <!-- Need to change the config file to get the tf topic and get local position in terms of local origin -->
            <arg name="config_yaml" value="$(find mavros)/launch/px4_config.yaml" />
            <arg name="fcu_url" value="$(arg fcu_url)" />
            <arg name="gcs_url" value="$(arg gcs_url)" />
            <arg name="tgt_system" value="$(arg tgt_system)" />
            <arg name="tgt_component" value="$(arg tgt_component)" />
            <arg name="fcu_protocol" value="$(arg fcu_protocol)" />
        </include>
    </group>

    <!-- Launch Gazebo -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="headless" value="$(arg headless)"/>
        <arg name="gui" value="$(arg gui)"/>
        <arg name="world_name" value="$(arg world_path)" />
    </include> --> 
    
    <!-- hector slam -->
    <include file="$(find hector_slam_launch)/launch/hector_borealis.launch">
    </include> 

    <!-- can insert the launch file for the teraRanger pkg from the teraranger_array node -->
    
    <!-- Spawn iris with depth camera MUST INITIALISE WITH PYTHON 2.7-->
    <node name="spawn_model" pkg="gazebo_ros" type="spawn_model" output="screen"
          args="-sdf -database $(arg model) -model iris">
    </node>
</launch>
